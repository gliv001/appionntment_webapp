{% extends "base.jinja2" %}
{% block styles %}
    <link
            rel="stylesheet"
            href="{{ url_for('static', filename='css/forms.css') }}"
            type="text/css"
    />
{% endblock %}

{% block head %}<title>Appointments Page</title>{% endblock %}

{% block content %}
<div class="content">
    <h1 style="text-align: center">Appointment Update</h1>
    <div>
      <form method="POST" action="{{ url_for('view.appointment_update', id=appointment.id) }}">
      {{ form.csrf_token }}
        <fieldset class="form-field">
        {{ form.client.label }}
        {{ form.client }}
        {% if form.client.errors %}
            <ul class="errors">
            {% for error in form.client.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.service.label }}
        {{ form.service }}
        {% if form.service.errors %}
            <ul class="errors">
            {% for error in form.service.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.employee.label }}
        {{ form.employee }}
        {% if form.employee.errors %}
            <ul class="errors">
            {% for error in form.employee.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.appt_datetime.label }}
        {{ form.appt_datetime }}
        {% if form.appt_datetime.errors %}
            <ul class="errors">
            {% for error in form.appt_datetime.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.tip.label }}
        {{ form.tip }}
        {% if form.tip.errors %}
            <ul class="errors">
            {% for error in form.tip.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.total.label }}
        {{ form.total }}
        {% if form.total.errors %}
            <ul class="errors">
            {% for error in form.total.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        {{ form.add }}
      </form>
    </div>

</div>
{% endblock %}
