{% extends "base.jinja2" %}
{% block styles %}
    <link
            rel="stylesheet"
            href="{{ url_for('static', filename='css/forms.css') }}"
            type="text/css"
    />
{% endblock %}

{% block head %}
<title>Appointments Page</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="{{url_for('static', filename='js/apptTotalSum.js')}}"></script>
{% endblock %}

{% block content %}
<div class="content">
    <h1 style="text-align: center">Appointment Update</h1>
    <div>
      <form method="POST" action="{{ url_for('view.appointment_update', id=appointment.id) }}">
      {{ form.csrf_token }}
        <fieldset class="form-field">
        {{ form.client.label }}
        {{ form.client }}
        {% if form.client.errors %}
            <ul class="errors">
            {% for error in form.client.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.service.label }}
        {{ form.service(class_="sum-param") }}
        {% if form.service.errors %}
            <ul class="errors">
            {% for error in form.service.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.employee.label }}
        {{ form.employee }}
        {% if form.employee.errors %}
            <ul class="errors">
            {% for error in form.employee.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.appt_date.label }}
        {{ form.appt_date }}
        {% if form.appt_date.errors %}
            <ul class="errors">
            {% for error in form.appt_date.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        {{ form.appt_time.label }}
        {{ form.appt_time }}
        {% if form.appt_time.errors %}
            <ul class="errors">
            {% for error in form.appt_time.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.tip.label }}
        {{ form.tip(class_="sum-param") }}
        {% if form.tip.errors %}
            <ul class="errors">
            {% for error in form.tip.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.total.label }}
        {{ form.total }}
        {% if form.total.errors %}
            <ul class="errors">
            {% for error in form.total.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        {{ form.add }}
      </form>
    </div>

</div>
{% endblock %}
