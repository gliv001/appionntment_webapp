{% extends "base.jinja2" %}
{% block styles %}
    <link
            rel="stylesheet"
            href="{{ url_for('static', filename='css/forms.css') }}"
            type="text/css"
    />
{% endblock %}

{% block head %}<title>Login Page</title>{% endblock %}

{% block content %}
    <div class="form-wrapper">
      <form method="POST" action="{{ url_for('auth.login') }}">
      {{ form.csrf_token }}
      <h2 class="title">Welcome to Appointment System</h2>
        <fieldset class="form-field">
        {{ form.email.label }}
        {{ form.email }}
        {% if form.email.errors %}
            <ul class="errors">
            {% for error in form.email.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.password.label }}
        {{ form.password }}
        </fieldset>
        {{ form.submit }}
      </form>
    </div>
{% endblock %}
