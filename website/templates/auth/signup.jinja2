{% extends "base.jinja2" %}
{% block styles %}
    <link
            rel="stylesheet"
            href="{{ url_for('static', filename='css/forms.css') }}"
            type="text/css"
    />
{% endblock %}

{% block head %}<title>SignUp Page</title>{% endblock %}

{% block content %}
    <div class="form-wrapper">
      <form method="POST" action="{{ url_for('auth.signup') }}">
      {{ form.csrf_token }}
      <h2 class="title">SignUp Request Form</h2>
        <fieldset class="form-field">
        {{ form.email.label }}
        {{ form.email }}
        {% if form.email.errors %}
            <ul class="errors">
            {% for error in form.email.errors %}
                <li class="error">
                    <i class="fas fa-exclamation"></i> <span class="error-message">{{ error }}</span>
                </li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.name.label }}
        {{ form.name }}
        {% if form.name.errors %}
        <ul class="errors">
            {% for error in form.name.errors %}
            <li class="error">
                <i class="fas fa-exclamation"></i> <span class="error-message">{{ error }}</span>
            </li>
            {% endfor %}
        </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.password.label }}
        {{ form.password }}
        {% if form.password.errors %}
            <ul class="errors">
            {% for error in form.password.errors %}
                <li class="error">
                    <i class="fas fa-exclamation"></i> <span class="error-message">{{ error }}</span>
                </li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        <fieldset class="form-field">
        {{ form.password2.label }}
        {{ form.password2 }}
        {% if form.password2.errors %}
            <ul class="errors">
            {% for error in form.password2.errors %}
                <li class="error">
                    <i class="fas fa-exclamation"></i> <span class="error-message">{{ error }}</span>
                </li>
            {% endfor %}
            </ul>
        {% endif %}
        </fieldset>
        {{ form.submit }}
      </form>
    </div>
</div>
{% endblock %}
